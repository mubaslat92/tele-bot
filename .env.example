TELEGRAM_BOT_TOKEN=replace_me
ALLOWED_USER_IDS=
DB_PATH=./data/ledger.sqlite
REPORTS_DIR=./data/reports
ALIASES_PATH=./data/aliases.json
AI_CACHE_PATH=./data/ai_cache.json
TIMEZONE=Asia/Amman
MONTHLY_REPORT_DAY=1

# WhatsApp Cloud API (optional)
WHATSAPP_ENABLED=false
WHATSAPP_VERIFY_TOKEN=replace_me
WHATSAPP_ACCESS_TOKEN=replace_me
WHATSAPP_APP_SECRET=
WHATSAPP_PORT=8081
WHATSAPP_PUBLIC_BASE=http://localhost:8081
WHATSAPP_PHONE_NUMBER_ID=

DEFAULT_CURRENCY=JOD
# Optional: pick a code for amount-first messages (default is MISC)
# Example: DEFAULT_AMOUNT_FIRST_CODE=FOOD
DEFAULT_AMOUNT_FIRST_CODE=
AI_NORMALIZER_ENABLED=false
AI_PROVIDER=openai
OPENAI_API_KEY=
AI_MODEL=gpt-4o-mini

# Ollama (free local AI, optional)
# To use: install Ollama from https://ollama.com, run `ollama run llama3.2:3b-instruct` once,
# then set AI_PROVIDER=ollama and optionally adjust model/base URL below.
OLLAMA_MODEL=phi3:mini
OLLAMA_BASE_URL=http://localhost:11434

# Dashboard API (optional)
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8090
# Provide a token to protect the API; leave empty to disable auth (dev only)
DASHBOARD_AUTH_TOKEN=
