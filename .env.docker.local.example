# Copy to .env.docker.local and fill values

# --- Core ---
TELEGRAM_BOT_TOKEN=
BOT_MODE=polling # start with polling; switch to webhook after domain+HTTPS
WEBHOOK_URL=
WEBHOOK_PORT=8080

# API / Dashboard
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8090
DASHBOARD_AUTH_TOKEN=change-me-please

# Timezone & storage
TIMEZONE=Asia/Amman
DB_PATH=./data/ledger.sqlite
REPORTS_DIR=./data/reports
ALIASES_PATH=./data/aliases.json
AI_CACHE_PATH=./data/ai_cache.json

# Parser & defaults
PARSER_VERSION=v2
DEFAULT_CURRENCY=JOD
DEFAULT_AMOUNT_FIRST_CODE=F

# AI/OCR (optional)
AI_NORMALIZER_ENABLED=false
AI_PROVIDER=ollama
OLLAMA_MODEL=phi3:mini
OLLAMA_BASE_URL=http://host.docker.internal:11434
