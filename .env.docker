# Copy this to .env.docker and fill the secrets

# --- Core ---
TELEGRAM_BOT_TOKEN=
BOT_MODE=polling # set to webhook for production with a public URL
WEBHOOK_URL= # e.g., https://ledger.example.com
WEBHOOK_PORT=8080

# API/Dashboard
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8090
DASHBOARD_AUTH_TOKEN=change-me-please

# Locale & storage
TIMEZONE=Asia/Amman
DB_PATH=./data/ledger.sqlite
REPORTS_DIR=./data/reports
ALIASES_PATH=./data/aliases.json
AI_CACHE_PATH=./data/ai_cache.json

# Parser & FX
PARSER_VERSION=v2
DEFAULT_CURRENCY=JOD
DEFAULT_AMOUNT_FIRST_CODE=F

# OCR/AI (optional)
AI_NORMALIZER_ENABLED=false
AI_PROVIDER=ollama
OLLAMA_MODEL=phi3:mini
OLLAMA_BASE_URL=http://host.docker.internal:11434

# WhatsApp Cloud (optional)
WHATSAPP_ENABLED=false
WHATSAPP_PORT=8081
WHATSAPP_PUBLIC_BASE=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_APP_SECRET=
